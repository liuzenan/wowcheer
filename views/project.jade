extends layout
block body
  #main-content
    .intro
      .hero-image(style="background-image: url(/img/#{project.artist.poster_large});")
      .container
        .hero-text
          h1.artist-name #{project.artist.name}
          h2.location #{project.venue.name}
    .container
      .project
        .project-info
          .project-timeline
            h2 项目进度
            .project-progress
              .progress-bar(style="width:60%")
          .project-des
