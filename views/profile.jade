extends layout
block body
  #main-content
     .intro(style="height:200px")
      .hero-image(style="background-image: url(/img/profile_background.jpg);")
      .container
        .hero-text
          h1 #{user.username}的个人空间 
     
     .container
      .project
        .project-info
          .section
            .section-header
              h2.main-title 我去的演出
              hr
            - if (bookings && bookings.length > 0) {
              - bookings.foreach(function(booking){
              - var project = booking.project;
                  .project-card-wide
                    .project-card-lead
                      .project-card-img(style="background-image:url(/img/#{project.main_poster_url})")
                      a.project-card-button(href="/project/#{project.id/}", target="_self") 查看
                    .project-card-detail
                      .project-card-singer
                         h3  
                          a(href="/artist/#{project.artist._id/}", target="_self" style="none") #{project.artist.name}
                      .project-card-date
                        h3 #{timeFormatter('Y.m.d', project.performance_time)}
                      .project-card-des
                        p #{project.artist.introduction}
                      h5.project-card-city
                        span.venue 
                           a(href="/venue/#{project.venue._id/}" ,target="_self" style="none")  #{project.venue.name}
                      .project-card-other-city
                        a(href="http://", target="_self") 查看其它城市
                      .project-progress
                        .progress-bar(style="width:60%")
                      .project-card-number 2412/3000
              -})
            
            -} else {
              h5  你还没有预定过演出
                a(href="/search")  现在就去搜索 
            -}
        .project-package(style="padding:10px;margin-top:0px;width:25%;background:#ffffff;-moz-box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.24); -webkit-box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.24);box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.24);")
            .project-stats
              img(src="/img/default_profile.jpg" style="width:100%")
              h3 用户名:
              div #{user.username} 
              h3 城市:
              <input type="text" style="width:90%" value=' #{user.city}' maxlength="6" name="usrname">
              h3 个人简介:
              textarea(style="width:90%") 大家好! 我喜欢音乐
              br
              h5
                a(href="edit" style="float:right") 修改
